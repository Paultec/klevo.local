<div class="col col-lg-7 col-lg-offset-2 form_wrap">
    <h1 class="text-center"><?php echo $this->translate('Sign In'); ?></h1>
    <div>
<?php
$form = $this->loginForm;
$form->prepare();
$form->setAttribute('action', $this->url('zfcuser/login'));
